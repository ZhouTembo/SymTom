@model List<SymTom.Models.Symptom>


<div class="modal-header">
    <h1 class="display-2">All of Your Symptoms</h1>
</div>

@if (Model.Count == 0)
{
    <div class="container">
        <div class="col float-left">
            <p>No Symptoms Saved!</p>
        </div>
        <div class="col float-right ">
            <div class="card-deck float-right ">
                <div class="card shadow">
                    <div class="card-header">There are no symptoms in the database</div>
                    <div class="card-body">Please add one to continue.</div>
                </div>
            </div>
        </div>
    </div>
    <p><a class="btn btn-outline-primary btn-sm shadow float-left" asp-controller="Symptom" asp-action="Add">Add Symptom</a></p>

}

@if (Model.Count >= 1)
{
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-bordered  table-striped shadow ">
                    <thead class="thead-dark">
                        <tr>
                            <th>Location</th>
                            <th>Symptom</th>
                            <th>Date</th>
                            <th>Severity</th>
                        </tr>
                    </thead>

                    @foreach (var symptom in Model)
                    {
                        <tr>
                            <td>@symptom.Location</td>
                            <td>@symptom.Name</td>
                            <td>@symptom.Date</td>
                            <td>@symptom.Severity</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="col">
                <iframe class="shadow border-secondary" src="https://healthfinder.gov/myhealthfinder/widget/" name="myhealthfinderframe" frameborder="1" id="myhealthfinderframe" scrolling="yes" height="385" width="100%" marginheight="0" title="myhealthfinder widget" marginwidth="0"></iframe>
            </div>

        </div>
    </div>
 
    <div class="btn-toolbar align-bottom ">

        <p><a class="btn btn-outline-primary btn-sm shadow" asp-controller="Symptom" asp-action="Add">Add Symptom</a>
        <p><a class="btn btn-outline-primary btn-sm shadow" asp-controller="Symptom" asp-action="Remove">Remove Symptom</a>
        <p>
            @using (Html.BeginForm("Index", "CreatePdf"))
            {
                <button class="btn btn-outline-primary btn-sm shadow" id="submitButton" type="submit">Create Pdf</button>

            }
        </p>
    </div>
    
 }
