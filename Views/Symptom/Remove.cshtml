@model List<SymTom.Models.Symptom>


<div class="modal-header">
    <h1 class="display-2">Remove Symptom(s)</h1>
</div>
@if (Model.Count == 0)
{  
    <div class="container">
        <div class="col float-left">
            <p>No Symptoms Saved!</p>
        </div>
        <div class="col float-right ">
            <div class="card-deck float-right ">
                <div class="card shadow">
                    <div class="card-header">There are no symptoms in the database</div>
                    <div class="card-body">Please add one to continue.</div>
                </div>
            </div>
        </div>
    </div>
  <p><a class="btn btn-outline-primary btn-sm shadow" asp-controller="Symptom" asp-action="Add">Add Symptom</a></p>

  }

@if (Model.Count >= 1)
{

    <div class="container">
        <div class="col">
            <form method="post" onsubmit="return confirm('Are you sure you want to remove selected symptom(s)?')" class="float-left">
                <table class="table table-bordered  table-striped shadow  ">
                    <thead class="thead-dark">
                        <tr>
                            <th>Selected</th>
                            <th>Location</th>
                            <th>Symptom</th>
                            <th>Date</th>
                            <th>Severity</th>
                        </tr>
                    </thead>
                    @foreach (var symptom in Model)
                    {
                        <tr>
                            <td><input type="checkbox" name="symptomIds" id="@symptom.ID" value="@symptom.ID" /></td>
                            <td>@symptom.Location</td>
                            <td>@symptom.Name</td>
                            <td>@symptom.Date</td>
                            <td>@symptom.Severity</td>
                        </tr>
                    }


                </table>

                <input class="btn btn-outline-primary btn-sm shadow" type="submit" value="Remove Selected Symptom(s)" />
            </form>
        </div>

        <div class="col ">
            <div class="card  shadow float-right">
                <div class="card-header shadow">Select which symptom(s) to remove</div>
                <div class="card-body">-Make sure you've saved them in a pdf first!</div>


            </div>

        </div>
    </div>


}