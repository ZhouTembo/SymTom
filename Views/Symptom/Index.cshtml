@model SymTom.ViewModels.AddSymptomViewModel


    <div class="modal-header text-lg-center">
        <h1 class="display-4 ">Add Your Symptom</h1>
    </div>
   

<div class="container">
    <div class="row">
        <div class="col ">
            <form asp-controller="Symptom" asp-action="Add" method="post" >

                <div class="form-group">
                    <label asp-for="Location"></label>
                    <input class="form-control" value='@Context.Request.Query["where"]' asp-for="Location" >
                    <span asp-validation-for="Location"></span>
                </div>


                <div class="form-group">
                    
                    <label asp-for="Name"></label>
                    <input class="form-control " asp-for="Name" placeholder="e.g. Throbbing, Tingling, Burning, etc." />
                    <span asp-validation-for="Name"></span>
                    
                </div>
                <div class="form-group">
                    <label asp-for="Severity"></label>
                   
                    <img style="border-image" src="https://www.disabled-world.com/pics/1/pain-scale-chart-3.gif" alt="Image result for pain chart" width="550"/>
                    <input type="range" class="form-control-range "  min="0" max="10" asp-for="Severity" placeholder="e.g. 1-10" />
                    <span asp-validation-for="Severity"></span>
                    
                </div>


                <div class="form-group">
                    <label asp-for="Date"></label>
                    <input class="form-control " asp-for="Date ">
                    <span asp-validation-for="Date"></span>
                </div>


                <input class="btn btn-primary btn-sm shadow" type="submit" value="Add Symptom" />


            </form>
        </div>
        <div class="col ">
            <div class="card  shadow">
                <div class="card-header shadow">Please help me understand what the symptom is like</div>
                <div class="card-body">-How does it feel?</div>

                <div class="card-body">-Rate your symptom:<br />Left being the least and right being the worst.</div>

                <div class="card-body">-Select the date that you first noticed the symptom.</div>
            </div>
            
        </div>
    </div>
</div>

